<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pointColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_password_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="초기 비밀번호 설정"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"></FrameLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_password_pw1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/all_roundbox_gray_r10"
                    android:ems="10"
                    android:maxLines="1"
                    android:hint="신규 비밀번호"
                    android:textColorHint="@color/pointColor"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:inputType="textPassword"
                    android:textColor="@color/defaultTextColor" />

                <EditText
                    android:id="@+id/et_password_pw2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/all_roundbox_gray_r10"
                    android:ems="10"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:hint="비밀번호 확인"
                    android:textColorHint="@color/pointColor"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:textColor="@color/defaultTextColor" />

                <Button
                    android:id="@+id/btn_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="확인"
                    android:background="@drawable/all_roundbox_pointcolor_white_border_r10"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>