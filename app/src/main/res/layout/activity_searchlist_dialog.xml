<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nsv_searchlistdialog"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_roundbox_white_r10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_searchlistdialog_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/defaultTextColor"
                android:textColorHint="@color/darkGray"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_searchlistdialog_close"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/dialog_close" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/border_darkgray_r30"
            android:orientation="horizontal"

            android:paddingLeft="15dp">

            <EditText
                android:id="@+id/et_searchlistdialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="검색"
                android:inputType="text"
                android:textColor="@color/defaultTextColor"
                android:textColorHint="@color/darkGray"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_searchlistdialog_clear"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:src="@drawable/all_close" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_searchlistdialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>